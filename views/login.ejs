    <body>
        <div class="sign-up-form">
            <h1>Sign In</h1>
            <form method="post" action="/login">
                <input type="username" name="username" class="input-box" placeholder="Username">
                <input type="password" name="password" class="input-box" placeholder="Password">
                
                
                <p><span><input type="checkbox" name="" id=""></span> I Agree to the terms and Services</p>
                
                <button type="submit" value="Submit" class="sign-btn">Sign In</button>
                <hr>
                <p class="or">OR</p>
                <button type="button" class="sign-btn">Login With Gmail</button>
                <p> Don't have an account? <a href="register">Sign Up</a></p>
            </form>
        </div>


        

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    </body>

</html>